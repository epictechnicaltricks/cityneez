<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_color"
	android:orientation="vertical">


	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="10sp">

		<LinearLayout

			android:id="@+id/bg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout

				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">



					<androidx.cardview.widget.CardView
						android:elevation="5sp"
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:id="@+id/cardimg3"
						app:cardCornerRadius="100dp"
						app:cardPreventCornerOverlap="false"
						app:cardElevation="6dp"
						android:layout_margin="10dp"
						android:foregroundGravity="center_horizontal">
						<ImageView
							android:translationY="10sp"
							android:scaleType="centerCrop"
							android:id="@+id/imageview6"
							android:layout_width="match_parent"
							android:layout_height="match_parent"/>


					</androidx.cardview.widget.CardView>

				<LinearLayout
					android:layout_weight="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_margin="10dp">
					<TextView
						android:layout_marginLeft="10dp"
						android:id="@+id/name"
						android:layout_marginTop="20dp"
						android:textStyle="bold"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Hello, User"
						android:textSize="24dp"
						android:textColor="@color/text_color"
	                  android:fontFamily="@font/productsans_regular"/>
					<TextView
						android:alpha="0.6"
						android:layout_marginLeft="10dp"
						android:id="@+id/phone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="1234567890"
						android:textSize="20dp"
						android:textColor="@color/text_color"
	android:fontFamily="@font/productsans_regular"/>
					<TextView
						android:visibility="gone"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Unit-4,GVIT Techno..."
						android:textColor="@color/text_color"
	android:fontFamily="@font/productsans_regular"
						android:textSize="18dp" />
				</LinearLayout>

				<ImageView
					android:layout_marginEnd="20dp"
					android:id="@+id/edit"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/edit"
					android:layout_gravity="end"
					android:layout_marginLeft="150dp"
					android:layout_marginTop="0dp"/>




			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="10dp">
				<TextView
					android:visibility="gone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="My Booking"
					android:textColor="@color/text_color"
	android:fontFamily="@font/productsans_regular"
					android:textSize="20dp"
					android:layout_margin="10dp"/>
			</LinearLayout>
			<androidx.cardview.widget.CardView
				app:cardBackgroundColor="@color/lite_bg_color"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_margin="10sp"
					android:padding="4dp">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/location1"
						android:layout_gravity="center"
						app:tint="@color/text_color"/>
					<TextView
						android:layout_marginLeft="20sp"
						android:id="@+id/address"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="My Address"
						android:textColor="@color/text_color"

						android:fontFamily="@font/productsans_regular"
						android:textSize="20dp" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="@color/lite_bg_color">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_margin="10sp"
					android:padding="4dp">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/order"
						android:layout_gravity="center"
						app:tint="@color/text_color"/>
					<TextView
						android:layout_marginLeft="20sp"
						android:id="@+id/order"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="My Order"
						android:textColor="@color/text_color"
						android:fontFamily="@font/productsans_regular"
						android:textSize="20dp" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="@color/lite_bg_color">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_margin="10sp"
					android:padding="4dp">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/service1"
						android:layout_gravity="center"
						app:tint="@color/text_color"/>
					<TextView
						android:layout_marginLeft="20sp"
						android:id="@+id/service"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="My Service"
						android:textColor="@color/text_color"
						android:fontFamily="@font/productsans_regular"
						android:textSize="20dp" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="@color/lite_bg_color">
			<LinearLayout
				android:padding="8dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="2dp">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/star"
					android:layout_gravity="center"
					app:tint="@color/text_color"/>
				<TextView
					android:id="@+id/ratings"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="My Rating"
					android:textColor="@color/text_color"
					android:fontFamily="@font/productsans_regular"
					android:textSize="20dp"
					android:layout_marginLeft="20sp" />
			</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="@color/lite_bg_color">
			<LinearLayout
				android:padding="4dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="2dp"
				>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/suport"
					android:layout_gravity="center"
					app:tint="@color/text_color"/>
				<TextView
					android:id="@+id/support"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Help &amp; Support"
					android:textColor="@color/text_color"
					android:fontFamily="@font/productsans_regular"
					android:textSize="20dp"
					android:layout_marginLeft="20sp"/>
			</LinearLayout>
			</androidx.cardview.widget.CardView>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="2dp">
				<TextView
					android:fontFamily="@font/productsans_regular"
					android:id="@+id/logout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24dp"

					android:layout_marginTop="112dp"
					android:textColor="#F30707"
					android:text="Logout"
					android:gravity="center"/>
			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout

				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:fontFamily="@font/productsans_bold"
					android:id="@+id/login_"
					android:layout_weight="1"

					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24dp"

				
					android:layout_marginTop="112dp"
					android:textColor="#2196F3"
					android:text="Login now "
					android:textStyle="bold"
					android:gravity="right"/>

				<TextView
					android:fontFamily="@font/productsans_regular"
					android:id="@+id/login_2"
					android:layout_weight="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24dp"
				
					android:layout_marginTop="112dp"
					android:textColor="@color/text_color"
					android:text="to access"
					android:gravity="left"/>

			</LinearLayout>



		</LinearLayout>
	</LinearLayout>



</ScrollView>