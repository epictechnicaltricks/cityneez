<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_color"
	android:orientation="vertical">


	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="10sp">

		<LinearLayout

			android:id="@+id/bg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
android:gravity="center"
				android:padding="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">



					<androidx.cardview.widget.CardView
						android:elevation="3sp"
						
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:id="@+id/cardimg3"
						app:cardCornerRadius="100dp"
						app:cardPreventCornerOverlap="false"
						app:cardElevation="6dp"
					android:layout_margin="5dp"
						android:foregroundGravity="center_horizontal">
						<ImageView
							android:translationY="10sp"
							android:scaleType="centerCrop"
							android:id="@+id/imageview6"
							android:layout_width="match_parent"
							android:layout_height="match_parent"/>


					</androidx.cardview.widget.CardView>

				<LinearLayout
					android:gravity="center_vertical"
					android:layout_weight="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_margin="10dp">
					<TextView
						android:singleLine="true"
						android:ellipsize="marquee"
						android:layout_marginLeft="10dp"
						android:id="@+id/name"
						android:layout_marginTop="17sp"
						android:textStyle="bold"
						android:layout_width="170dp"
						android:layout_height="wrap_content"
						android:text="Hello, User"
						android:textSize="20sp"
						android:textColor="@color/text_color"
	                  android:fontFamily="@font/dmsansbold"/>
					<TextView
						android:alpha="0.6"
						android:layout_marginLeft="10dp"
						android:id="@+id/phone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="1234567890"
						android:textSize="15dp"
						android:textColor="@color/text_color"
	android:fontFamily="@font/dmsansregular"/>
					<TextView
						android:visibility="gone"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Unit-4,GVIT Techno..."
						android:textColor="@color/white"
	android:fontFamily="@font/dmsansmedium"
						android:textSize="18dp" />
				</LinearLayout>

				<ImageView
					android:layout_marginEnd="17sp"
					android:id="@+id/edit"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/edit"
					android:layout_gravity="end"
					android:layout_marginLeft="150dp"
					android:layout_marginTop="0dp"/>




			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="10dp">
				<TextView
					android:visibility="gone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="My Booking"
					android:textColor="@color/white"
	android:fontFamily="@font/dmsansmedium"
					android:textSize="17sp"
					android:layout_margin="10dp"/>
			</LinearLayout>
			<androidx.cardview.widget.CardView

				app:cardBackgroundColor="#3F51B5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_margin="10sp"
					android:padding="4dp">
					<ImageView

						android:layout_width="22dp"
						android:layout_height="22dp"
						android:src="@drawable/baseline_location_on_24"
						android:layout_gravity="center"
						app:tint="@color/white"/>
					<TextView
						android:layout_marginLeft="20sp"
						android:id="@+id/address"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="My Address"
						android:textColor="@color/white"

						android:fontFamily="@font/dmsansmedium"
						android:textSize="17sp" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/my_order"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="#673AB7">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_margin="10sp"
					android:padding="4dp">
					<ImageView
						android:layout_width="22dp"
						android:layout_height="22dp"
						android:src="@drawable/baseline_shopping_cart_24"
						android:layout_gravity="center"
						app:tint="@color/white"/>
					<TextView
						android:layout_marginLeft="20sp"
						android:id="@+id/order"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="My Orders"
						android:textColor="@color/white"
						android:fontFamily="@font/dmsansmedium"
						android:textSize="17sp" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="#9C27B0">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_margin="10sp"
					android:padding="4dp">
					<ImageView
						android:layout_width="22dp"
						android:layout_height="22dp"
						android:src="@drawable/baseline_cleaning_services_24"

						android:layout_gravity="center"
						app:tint="@color/white"/>
					<TextView
						android:layout_marginLeft="20sp"
						android:id="@+id/service"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="My Services"
						android:textColor="@color/white"
						android:fontFamily="@font/dmsansmedium"
						android:textSize="17sp" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/notification"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="#E91E63">
			<LinearLayout
				android:padding="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="5sp">
				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:src="@drawable/baseline_notifications_24"
					android:layout_gravity="center"
					app:tint="@color/white"/>
				<TextView
					android:id="@+id/ratings"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="My Notifications"
					android:textColor="@color/white"
					android:fontFamily="@font/dmsansmedium"
					android:textSize="17sp"
					android:layout_marginLeft="20sp" />
			</LinearLayout>
			</androidx.cardview.widget.CardView>




			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="20sp"
				android:layout_margin="10sp"
				app:cardBackgroundColor="#F44336">
			<LinearLayout
				android:padding="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="5dp"
				>
				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:src="@drawable/baseline_contact_support_24"
					android:layout_gravity="center"
					app:tint="@color/white"/>
				<TextView
					android:id="@+id/support"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Help &amp; Support"
					android:textColor="@color/white"
					android:fontFamily="@font/dmsansmedium"
					android:textSize="17sp"
					android:layout_marginLeft="20sp"/>
			</LinearLayout>
			</androidx.cardview.widget.CardView>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="2dp">
				<TextView
					android:fontFamily="@font/dmsansregular"
					android:id="@+id/logout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="20dp"

					android:layout_marginTop="112dp"
					android:textColor="#F30707"
					android:text="Logout"
					android:gravity="center"/>
			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout

				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:fontFamily="@font/productsans_bold"
					android:id="@+id/login_"
					android:layout_weight="1"

					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24dp"

				
					android:layout_marginTop="112dp"
					android:textColor="#2196F3"
					android:text="Login now "
					android:textStyle="bold"
					android:gravity="right"/>

				<TextView
					android:fontFamily="@font/dmsansmedium"
					android:id="@+id/login_2"
					android:layout_weight="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24dp"
				
					android:layout_marginTop="112dp"
					android:textColor="@color/text_color"
					android:text="to access"
					android:gravity="left"/>

			</LinearLayout>



		</LinearLayout>
	</LinearLayout>



</ScrollView>