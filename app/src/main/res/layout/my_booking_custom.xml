<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_bg"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:elevation="20dp"
        android:padding="6dp"
        app:cardBackgroundColor="#e89920"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:padding="7dp"
            android:background="#350B7E"
            android:gravity="center"
            android:text="#BOOKID - 78"
            android:textStyle="bold"
            android:id="@+id/book_id"

            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:padding="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="21sp"
                    android:textColor="#000000"
android:id="@+id/service_name"
                    android:textStyle="bold"
                    android:text="AC CLEANING"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
                    android:textColor="#FF9800"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>





            <TextView
                android:textStyle="bold"
                android:id="@+id/date"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
android:alpha="0.6"
                android:text="Booked on 19th March 2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/desc"
                android:textColor="#FFFFFF"
android:layout_marginTop="10dp"
                android:textSize="16sp"

                android:text="This is the description of the servce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout

                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                   android:visibility="visible"
                    android:id="@+id/support"
                    android:layout_width="wrap_content"
                    app:cornerRadius="50dp"
                    android:text="DETAILS"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>


                <com.google.android.material.button.MaterialButton
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    app:backgroundTint="#000000"
                    app:cornerRadius="50dp"
                    android:layout_margin="5dp"
                    android:text="CANCEL BOOKING"
                    android:textSize="12sp"
android:id="@+id/cancel"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <TextView
                android:id="@+id/note"
                android:textColor="#F8F7F7"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:text="Note : Cancel booking available on Progress time only "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>