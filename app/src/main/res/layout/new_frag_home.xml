<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_color">


	<LinearLayout
		android:paddingBottom="40dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_margin="10dp">


		<LinearLayout
			android:layout_marginTop="10dp"
			android:padding="12dp"


			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Hello, "
					android:textSize="20sp"
					android:fontFamily="@font/productsans_regular"
					android:textColor="@color/lite_text_color" />
				<TextView
					android:fontFamily="@font/productsans_bold"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:text="Soumya"


					android:textSize="25sp"
					android:textColor="@color/text_color" />


			</LinearLayout>
			<LinearLayout

				android:gravity="center_vertical"
				android:layout_width="wrap_content"
				android:layout_height="match_parent">
				<ImageView
					android:id="@+id/cart"
					app:tint="@color/text_color"
					android:layout_marginEnd="10dp"
					android:layout_width="35sp"
					android:layout_height="35sp"
					android:scaleType="centerInside"

					android:src="@drawable/baseline_shopping_cart_24"

					android:background="@drawable/background"/>

				<ImageView
					android:id="@+id/menu"
					app:tint="@color/text_color"
					android:layout_marginEnd="10dp"
					android:layout_width="35sp"
					android:layout_height="35sp"
					android:scaleType="centerInside"

					android:src="@drawable/baseline_dehaze_24"

					android:background="@drawable/background"/>


			</LinearLayout>


		</LinearLayout>


		<LinearLayout
			android:id="@+id/s3"
			android:padding="8dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_marginTop="5dp"
			android:background="@drawable/background2">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:tint="@color/text_color"
				android:src="@drawable/baseline_search_24"/>
			<TextView
				android:fontFamily="@font/productsans_bold"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text=" Search"
				android:gravity="center_horizontal|center_vertical"
				android:textColor="@color/lite_text_color"/>


		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<HorizontalScrollView
				android:scrollbars="none"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/chicken"
						android:gravity="center"
						android:layout_margin="10dp"
						android:padding="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<androidx.cardview.widget.CardView
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:elevation="3dp"

							android:id="@+id/view2"
							app:cardCornerRadius="100dp">
							<ImageView
								android:scaleType="centerCrop"
								android:layout_height="match_parent"
								android:layout_width="match_parent"
								android:id="@+id/imageView1"
								android:src="@drawable/chicken"
								android:layout_alignParentTop="true"
								android:layout_centerHorizontal="true">
							</ImageView>
						</androidx.cardview.widget.CardView>
						<TextView
							android:layout_marginTop="6dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Raw Chicken"
							android:textColor="@color/text_color"
							android:fontFamily="@font/productsans_regular"
							android:layout_gravity="center"/>

					</LinearLayout>
					<LinearLayout
						android:gravity="center"
						android:layout_margin="10dp"
						android:padding="5dp"
						android:id="@+id/foodie"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<androidx.cardview.widget.CardView
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:elevation="3dp"

							android:id="@+id/view3"
							app:cardCornerRadius="100dp">
							<ImageView
								android:scaleType="centerCrop"
								android:layout_height="match_parent"
								android:layout_width="match_parent"
								android:id="@+id/khajana"
								android:src="@drawable/khajana"
								android:layout_alignParentTop="true"
								android:layout_centerHorizontal="true">
							</ImageView>
						</androidx.cardview.widget.CardView>
						<TextView
							android:layout_marginTop="5dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Foody"
							android:textColor="@color/text_color"
							android:fontFamily="@font/productsans_regular"
							android:layout_gravity="center"/>

					</LinearLayout>
					<LinearLayout
						android:id="@+id/noti"
						android:layout_margin="10dp"
						android:padding="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<androidx.cardview.widget.CardView
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:elevation="3dp"
							app:cardCornerRadius="100dp">
							<ImageView
								android:scaleType="centerCrop"
								android:layout_height="match_parent"
								android:layout_width="match_parent"
								android:src="@drawable/mobile"
								android:layout_alignParentTop="true"
								android:layout_centerHorizontal="true">
							</ImageView>
						</androidx.cardview.widget.CardView>
						<TextView
							android:layout_marginTop="5dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Electronics"
							android:textColor="@color/text_color"
							android:fontFamily="@font/productsans_regular"
							android:layout_gravity="center"/>

					</LinearLayout>
					<LinearLayout
						android:layout_margin="10dp"
						android:padding="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<androidx.cardview.widget.CardView
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:elevation="3dp"
							app:cardCornerRadius="100dp">
							<ImageView
								android:scaleType="centerCrop"
								android:layout_height="match_parent"
								android:layout_width="match_parent"
								android:src="@drawable/grocery"
								android:layout_alignParentTop="true"
								android:layout_centerHorizontal="true">
							</ImageView>
						</androidx.cardview.widget.CardView>
						<TextView
							android:layout_marginTop="5dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Grocery"
							android:textColor="@color/text_color"
							android:fontFamily="@font/productsans_regular"
							android:layout_gravity="center"/>

					</LinearLayout>
					<LinearLayout
						android:layout_margin="10dp"
						android:padding="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<androidx.cardview.widget.CardView
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:elevation="3dp"
							app:cardCornerRadius="100dp">
							<ImageView
								android:scaleType="centerCrop"
								android:layout_height="match_parent"
								android:layout_width="match_parent"
								android:src="@drawable/medicine"
								android:layout_alignParentTop="true"
								android:layout_centerHorizontal="true">
							</ImageView>
						</androidx.cardview.widget.CardView>
						<TextView
							android:layout_marginTop="5dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Medicine"
							android:textColor="@color/text_color"
							android:fontFamily="@font/productsans_regular"
							android:layout_gravity="center"/>

					</LinearLayout>
					<LinearLayout
						android:layout_margin="10dp"
						android:padding="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<androidx.cardview.widget.CardView
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:elevation="3dp"
							app:cardBackgroundColor="@color/lite_bg_color"
							android:layout_gravity="center"
							app:cardCornerRadius="100dp">
							<ImageView
								android:tint="@color/text_color"
								android:layout_gravity="center"
								android:scaleType="centerInside"
								android:layout_height="30sp"
								android:layout_width="30sp"
								android:src="@drawable/category"
								android:layout_alignParentTop="true"
								android:layout_centerHorizontal="true">
							</ImageView>
						</androidx.cardview.widget.CardView>
						<TextView
							android:layout_marginTop="5dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Category"
							android:textColor="@color/text_color"
							android:fontFamily="@font/productsans_regular"
							android:layout_gravity="center"/>

					</LinearLayout>
				</LinearLayout>






			</HorizontalScrollView>
		</LinearLayout>


		<androidx.viewpager.widget.ViewPager

			android:layout_marginTop="15dp"
			android:padding="0dp"

			android:id="@+id/viewpager1"
			android:layout_width="match_parent"
			android:layout_height="150dp" />


		<LinearLayout
			android:layout_marginTop="15dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_marginStart="10dp"
				android:layout_weight="1"
				android:fontFamily="@font/productsans_bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Top Services"
				android:textSize="20sp"
				android:textColor="@color/text_color" />
			<TextView
				android:id="@+id/view_all"
				android:layout_marginEnd="20dp"
				android:layout_weight="1"
				android:gravity="right"
				android:fontFamily="@font/productsans_bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="View all"
				android:alpha="0.7"
				android:textSize="15sp"
				android:textColor="@color/bottom_nav_color" />
		</LinearLayout>


		<androidx.recyclerview.widget.RecyclerView
			android:clipToPadding="false"
			android:id="@+id/recyclerview2"
			android:layout_gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"

			android:layout_marginBottom="20dp"

			android:padding="0dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_marginStart="10dp"
				android:layout_weight="1"
				android:fontFamily="@font/productsans_bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="All Services"
				android:textSize="20sp"
				android:textColor="@color/text_color" />
			<TextView
				android:id="@+id/view_all2"
				android:layout_marginEnd="20dp"
				android:layout_weight="1"
				android:gravity="right"
				android:fontFamily="@font/productsans_bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="View all"
				android:alpha="0.7"
				android:textSize="15sp"
				android:textColor="@color/bottom_nav_color" />
		</LinearLayout>




		<androidx.recyclerview.widget.RecyclerView
			android:clipToPadding="false"
			android:id="@+id/recyclerview1"
			android:layout_gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="0dp"
			tools:listitem="@layout/service_list_custom"
			android:padding="0dp"/>

		<ImageView
			android:layout_gravity="top"
			android:scaleType="centerInside"

			android:src="@drawable/test_home"
			android:layout_width="match_parent"
			android:layout_height="800dp"/>
		<ImageView
			android:layout_gravity="top"
			android:scaleType="centerInside"

			android:src="@drawable/test_home2"
			android:layout_width="match_parent"
			android:layout_height="850dp"/>



	</LinearLayout>





</ScrollView>