<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_bg_color">


    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lite_bg_color"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="20dp"

                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:onClick="close"

                app:tint="@color/text_color"
                android:scaleType="center"
                android:src="@drawable/baseline_arrow_back_24" />


            <TextView
                android:id="@+id/textview1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="My Address"
                android:textColor="@color/text_color"
                android:textSize="25sp"
                android:fontFamily="@font/productsans_bold"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Enter Full name"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_bold" />


                    <EditText
                        android:id="@+id/name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="4dp"
                        android:hint="Full name * "
                        android:padding="8dp"
                        android:singleLine="true"

                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_regular"
                        android:textColorHint="#607D8B"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Enter Mobile Number"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_bold"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText

                        android:id="@+id/mobile_"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:hint="Mobile Number *"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_regular"
                        android:textColorHint="#607D8B"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Enter Email "
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_bold"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"

                        android:enabled="false"
                        android:hint="Email id"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_regular"
                        android:textColorHint="#607D8B"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Enter Address"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_bold"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText

                        android:id="@+id/addr_"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"

                        android:layout_margin="4dp"
                        android:gravity="top"
                        android:hint="Block no, Apartment, House No. *"
                        android:maxLines="5"
                        android:padding="8dp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_regular"
                        android:textColorHint="#607D8B"
                        android:textSize="16sp" />


                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="3dp"
                        android:paddingTop="12dp"
                        android:text="PIN code"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_bold"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pin_code_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:hint="PIN Code *"
                        android:inputType="phone"

                        android:maxLength="6"
                        android:padding="8dp"
                        android:paddingTop="12dp"
                        android:singleLine="true"

                        android:textColor="@color/text_color"
                        android:fontFamily="@font/productsans_regular"
                        android:textColorHint="#607D8B"
                        android:textSize="16sp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="3dp"
                        android:paddingTop="12dp"
                        android:text="Address type"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/radio_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:checked="false"
                            android:text="  Home"
                            android:textSize="17dp" />


                        <RadioButton
                            android:id="@+id/radio_office"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:checked="false"
                            android:text="  Office"
                            android:textSize="17dp" />


                    </RadioGroup>

                    <ProgressBar
                        android:id="@+id/prog"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/location"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="30dp"
                        android:background="#008DCD"
                        android:backgroundTint="#3154DA"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="17dp"

                        android:text="AUTO LOCATION "
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>


                <Button

                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="30dp"

                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#3579F1"
                    android:gravity="center_horizontal|center_vertical"

                    android:onClick="go_check"
                    android:padding="12dp"

                    android:text="Confirm Address"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="100dp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>


