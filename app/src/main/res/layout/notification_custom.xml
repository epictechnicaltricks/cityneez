<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/lite_bg_color"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:id="@+id/img"
                android:src="@drawable/test1"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name"
                    android:fontFamily="@font/productsans_bold"
                    android:text="Ordered On 23th Jan 2023"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/desc"
                    android:textSize="12sp"
                    android:alpha="0.6"
                    android:fontFamily="@font/productsans_regular"
                    android:text="Apple 19 Pro max"
                    android:textColor="@color/text_color"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/view_details"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/productsans_bold"
                        android:text="View Details"
                        android:textColor="@color/bottom_nav_color"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">

                    </TextView>


                    <TextView

                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:id="@+id/status"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:background="@color/lite_bg_color"
                        android:fontFamily="@font/productsans_bold"
                        android:text="Pending"
                        android:textColor="@color/lite_text_color"
                        android:textSize="13sp"
                        android:layout_width="200dp"
                        android:layout_height="20dp">

                    </TextView>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>